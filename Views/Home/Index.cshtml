@model IEnumerable<Product>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead class="table-dark">
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="40%" style="color:#d4ecea">
                        @obj.Name
                    </td>
                    <td width="40%" style="color:#d4ecea">
                        @obj.Price
                    </td>
                    <td width="20%" style="border-radius:5px; border:1px solid #bbb9b9">
                        <img src="@obj.ImageURL" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>